<% if notice %>
<p id="notice"><%= notice %></p> <% end %>
<h1>Criar Nota - Incluir produtos relacionados a mesma nota</h1>
<% @products.each do |product| %>
<div class="entry">
<% if product.quantity == 0 %>
<h3><%= product.name %> | <%= product.forma %> | <%= product.tamanho %> </h3>
<h2><em>Produto indisponível</em></h2>
<% else %>
<h3><%= product.name %> | <%= product.forma %> | <%= product.tamanho %> </h3>
<div class="price_line">
<span class="price">Quantidade em Estoque:<%= product.quantity %>
</span>
<span class="price">Preço de Venda:<%= number_to_currency(product.valuev, precision: 2)  %>
</span>
<span class="price">Preço de Custo:<%= number_to_currency(product.price, precision: 2)  %>
</span>
<%= button_to 'Incluir Produto no Pedido', line_items_path(:product_id => product) %>
<% end %>
</div>
</div>
<% end %>
