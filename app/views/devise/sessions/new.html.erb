<div class="container">
      <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-login">
          <div class="panel-heading">
            <div class="row">
                <a href="#" class="active" id="login-form-link">Entrar</a>
            </div>
            <hr>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-lg-12">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <form id="login-form" style="display: block;">
                  <div class="form-group">
                    <%= f.email_field :email,  tabindex: "1", class: "form-control", placeholder: "Email" %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, autocomplete: "off", tabindex: "2" , class: "form-control", placeholder: "Password"%>
                  </div>
                  <div class="form-group text-center">
                   <% if devise_mapping.rememberable? -%>
                     <%= f.check_box :remember_me, tabindex:"3" , class:""   %>
                     <label for="remember"> Remember Me</label>
                    <% end -%>
                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-sm-6 col-sm-offset-3">
                        <%= f.submit "Log in"  , class: "form-control btn btn-login" %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-lg-12">
                        <div class="text-center">
                          <a href="/users/password/new/" tabindex="5" class="forgot-password">Forgot Password?</a>
                        </div>
                      </div>
                    </div>
                  </div>

                </form>
              <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


