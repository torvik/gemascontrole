<div class="container">
      <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-login">
          <div class="panel-heading">
            <div class="row">
                <a href="#" class="active" id="register-form-link">Forgot your password?</a>
            </div>
            <hr>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-lg-12">
         <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <form id="login-form"  style="display: block;">
                  <div class="form-group">
                     <%= f.email_field :email, tabindex: "1", class: "form-control", placeholder: "Email" %>
                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-sm-6 col-sm-offset-3">
                        <%= f.submit "Send me reset password" , class: "form-control btn btn-register" %>
                      </div>
                    </div>
                  </div>
                </form>
            <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
